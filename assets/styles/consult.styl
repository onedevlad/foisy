@import 'common'

@import 'components/nav'
@import 'components/header'
@import 'components/lightbox-img'
@import 'components/tile-img'
@import 'components/footer'

.main
  z-index 6
  position relative
  padding 0
  .screen-1
    position relative
    .lower-part
      absolute left top
      width 100%
      height 100%
      .business
        absolute left top
        display inline-block
        width 100%
        margin-top 0.35em
        text-align center
        color grey-2
        font-size 12vw
        font-weight bold
        font-family SourceSansProBlack
        text-transform uppercase
      .right-part
      .right-line
        padding 0
        height 100%
        border-left 1px solid dark-grey
    .upper-part
      z-index 2
      position relative
      .desc-wrapper
        .suit-img-wrapper
          width 100%
          margin -30% 0 0 0
        .img
          width 100%
        .title-wrapper
          .title
            text-align center
            margin-top 48px
            text-transform uppercase
          .subtitle
            color dark-grey
            text-align center
            display inline-block
            width 70%
            margin-top 24px
            margin-left 15%
        .stats-wrapper
          .stats
            padding 0
            text-align center
            .icon
              display inline-block
              margin-top 48px
              border-radius 50%
              border 1px solid dark-grey
              padding 0.5em
            .number
              display block
              color pink
              font-weight bold
              white-space nowrap
              font-family SourceSansProBlack
              font-size 4em
              margin 12px 0
            .stat-title
              color dark-grey
              font-weight dark-grey
              font-family SourceSansProBlack
              text-transform uppercase
      .block-wrapper
        &-1
          margin-top 96px
        .icon
          padding 0.75em
          border-radius 50%
          border 1px solid dark-grey
        .title
          margin-top 48px
          text-transform uppercase
        .desc
          width 80%
          color dark-grey
          display block
        .more
          color dark-grey
          font-weight bold
          text-transform uppercase
          font-family SourceSansProBlack
          cursor pointer
          text-decoration none
      .block-img-wrapper
        padding 0
        img
          width 100%
  .screen-2
    position relative
    .lower-part
      absolute left top
      width 100%
      height 100%
      .stories
        display inline-block
        width 50%
        font-family SourceSansProBlack
        font-size 12vw
        text-transform uppercase
        color grey
        absolute top 50%
        line-height 1em
      .right-part
      .right-line
        padding 0
        height 100%
        border-left 1px solid dark-grey
    .upper-part
      padding-top 100px
      z-index 2
      position relative
      .left-part
      .right-part
        padding 0
        .img-wrapper
          z-index 2
          display block
          .img
            width 100%
      .title-wrapper
        margin-top 48px
        .title
          text-align center
          text-transform uppercase
        .more
          box-shadow 0 24px 36px rgba(black, 0.25)
          display inline-block
          margin 48px 0 0 50%
          transform translate(-50%, 0)
  .screen-3
    position relative
    .lower-part
      width 100%
      height 100%
      absolute left top
      .grey-block
        background grey
        width 95%
        height 80%
        absolute bottom
      .right-part
      .right-line
        padding 0
        height 100%
        border-left 1px solid dark-grey
    .upper-part
      z-index 2
      position relative
      .desc-wrapper
        .car-img-wrapper
          width 100%
          margin 96px 0 0 0
        .img
          width 100%
        .title-wrapper
          margin-top 48px
          .icon
            display inline-block
            margin-left 50%
            transform translate(-50%, 0)
            text-align center
            border-radius 50%
            border 1px solid dark-grey
            padding 0.5em
          .title
            display inline-block
            margin-top 24px
            width 100%
            text-align center
            text-transform uppercase
          .subtitle
            text-align center
            color dark-grey
            display inline-block
            width 70%
            margin-top 24px
            margin-left 15%
        .more
          box-shadow 0 24px 36px rgba(black, 0.25)
          display block
          margin 48px 0 144px 50%
          transform translate(-50%, 0)
@media(max-width $screen-md) // Tablet
  .screen-1
    .lower-part
      display none
    .upper-part
      .block-wrapper
        text-align center
        &-1
          .desc
            margin 0 0 24px 10%
          .block-img-wrapper
            margin-top 48px
        &-2
          .desc
            margin 48px 0 24px 10%
          .block-img-wrapper
            margin 48px 0
  .screen-2
    padding 0 5%
    .lower-part
      display none
    .upper-part
      .img-wrapper
        width 48%
        margin 1%
        float left
  .screen-3
    .lower-part
      display none

@media(min-width $screen-md) // Desktop
  .screen-1
    .block-wrapper
      .block-desc
        padding 96px 0 0 0
        .desc
          margin 24px 0
  .screen-2
    .upper-part
      .left-part
        .img-wrapper-1
          width 55%
          margin-left 30%
        .img-wrapper-2
          z-index 3 !important
          position relative
          width 50%
          margin-left 85%
        .img-wrapper-3
          width 40%
          margin-left 15%
      .right-part
        .img-wrapper-1
          width 70%
          margin 0 0 0 10%
        .img-outer-wrapper
          width 100%
          position relative
          .img-wrapper-2
            absolute top
            width 17.5%
            margin-left -7.5%
          .img-wrapper-3
            width 30%
            margin-left 80%