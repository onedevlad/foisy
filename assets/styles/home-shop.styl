@import 'common'

@import 'components/nav'
@import 'components/header'
@import 'components/slider'
@import 'components/tile-slider'
@import 'components/footer'
@import 'components/next-step'
@import 'components/lightbox-img'

.main
  z-index 6
  position relative
  padding 0
  .screen-1
    .left-part
      margin-top - block-top-offset
      background white
      padding-top block-top-offset + 144px
      .screen-num
        top "calc(%s + %s)" % (screen-margin block-top-offset)
      .best-sellers-title-wrapper
        margin-top 48px
        padding 0
        .like-icon
          color light-black
          border 1px solid light-grey
          border-radius 50%
          padding 0.5em
        .title
          margin 48px 0 12px 0
          text-transform uppercase
    .right-part
      position relative
      .right-line
        width 1px
        height 100%
        absolute left 58.33333336%
        background dark-grey
      .goods-wrapper
        margin-top 144px
        .goods
          padding 0
          position relative
          .img-wrapper
            position relative
            img
              width 100%
            &:after
            &::after
              content ""
              width 80%
              absolute bottom 2px left 10%
              height 50px
              background transparent
              z-index -1
              border-radius 100%
              box-shadow 0 0 96px rgba(black, 0.8)
          .desc-wrapper
            margin-top 48px
            .goods-title
              text-transform uppercase
            .goods-price
              display inline-block
              margin-top 12px
      .more-wrapper
        margin 48px 0 0 0
        .more
          font-weight bold
          font-family SourceSansProBlack
          text-transform uppercase
          color dark-grey
  .screen-2
    position relative
    .lower-part
      absolute top left
      width 100%
      height 100%
      .left-part
      .right-part
        height 100%
        padding 0
        .grey-block
          padding 0
          height 70vw
          background grey
      .left-part
        .women-sign-wrapper
          padding 0
          .women-sign
            z-index -1
            position relative
            color grey
            font-size 14vw
            white-space nowrap
            text-transform uppercase
            font-family SourceSansProBlack
            font-weight bold
      .right-part
        border-left 1px solid dark-grey
        .white-block
          padding 0
          margin-left 1px
          height 100%
          border-right 1px solid dark-grey
        .men-sign-wrapper
          padding 0
          margin-top 300px
          margin-left -1px // .white-block has 1px margin in order to let the line fit the ones above and below.
          .men-sign
            z-index -1
            position relative
            margin-left -20%
            color grey
            font-size 14vw
            white-space nowrap
            text-transform uppercase
            font-family SourceSansProBlack
            font-weight bold
    .upper-part
      z-index 2
      position relative
      .men-wrapper
      .women-wrapper
        padding 0
        margin-top 96px
        .img-wrapper
          padding 0
          .img-inner-wrapper
            position relative
            &:after
            &::after
              content ""
              width 80%
              absolute bottom 2px left 10%
              height 50px
              background transparent
              z-index -1
              border-radius 100%
              box-shadow 0 0 48px rgba(black, 0.8)
            .img
              width 100%
          .subimg-wrapper
            width 20%
            z-index 2
            position relative
            display block
            box-shadow 0 0 24px rgba(black, 0.25)
            img
              width 100%
        .desc-wrapper
          .title
            text-transform uppercase
          .subtitle
            color dark-grey
      .men-wrapper
        .desc-wrapper
          absolute top 48px
          text-align right
      .women-wrapper
        .desc-wrapper
          absolute top 48px
      .more-wrapper
        padding 0
        margin-top 48px
        margin-bottom 48px
  .screen-3
    position relative
    .screen-num
      top "calc(%s + %s)" % (screen-margin block-top-offset)
    .left-part
      padding 144px 0 0 0
      background grey
      .designer-wrapper
        margin 96px 0 0 0
        .person-wrapper
          position relative
          padding 0
          .avatar
            width 48px
            height 48px
          .person-data
            absolute bottom left 4em
            display inline-block
            span
              display block
            .person-name
              font-family SourceSansProBlack
              font-weight bold
              text-transform uppercase
            .person-position
              font-style italic
              color dark-grey
      .title-wrapper
        padding 0
        margin-top 48px
        .title
          text-transform uppercase
          line-height 1.5em
        .price
          margin 24px 0 0 0
          display inline-block
        .buy-wrapper
          margin 96px 0
    .right-part
      padding 0 0 0 0
      border-left 1px solid dark-grey
      position relative
      .slider
        margin 96px 0 0 0
        .slide-wrapper
          padding 0
          position relative
          .img
            width 100%
      .lower-part
        width 100%
        height 100%
        absolute left top
        .grey-block
          absolute left top
          height 100%
          width 90%
          background grey
        .white-block
          padding 0
          height 100%
          border-left 1px solid dark-grey
      .upper-part
        position relative
        z-index 2
        padding 144px 0 0 0
        .slider
          padding 0
          width 66.6666667%
        .slider-controls-wrapper
          margin 48px 0 144px 0
          padding 0
          .slider-controls
            padding 0
            .slider-control-box
              cursor pointer
              display inline-block
              margin-right 0.8em
              width 0.8em
              height 0.8em
              margin-top 0.1em
              background dark-grey
              &.active
                background blue
            .middle-dots
              color dark-grey
              font-weight bold
              margin 0 1em
              letter-spacing 0.25em
            .page-num
              font-weight bold
              color dark-grey
              .current-slide
                color black

@media(max-width $screen-md) // Tablet
  .screen-1
    .left-part
      padding 0 5%
      text-align center
    .right-part
      text-align center
      .right-line
        display none
      .goods-wrapper
        .goods
          margin-bottom 48px
  .screen-2
    padding 0 5%
    height auto
    .lower-part
      display none
    .upper-part
      .men-wrapper
      .women-wrapper
        .img-wrapper
          width 100%
          margin 0
          .subimg-wrapper
            margin 10% 0 0 0
      .men-wrapper
        .desc-wrapper
          right 0
      .women-wrapper
        .desc-wrapper
          left 0
  .screen-3
    .left-part
      padding 0 5% !important
    .right-part
      .lower-part
        display none
      .upper-part
        padding 0 !important
        .slider
          margin 0 0 0 16.666667%

@media(min-width $screen-md) // Desktop
  .screen-1
    .left-part
      padding 312px 0 screen-sub-margin 0
    .right-part
      padding-left 0
      padding-right 0
      border-left 1px solid dark-grey
  .screen-2
    position relative
    .upper-part
      .men-wrapper
      .women-wrapper
        .img-wrapper
          width 55%
      .men-wrapper
        .img-wrapper
          margin-left 17.333334%
          .subimg-wrapper
            margin -10% -10% 0 0
            float right
        .desc-wrapper
          left 70%
      .women-wrapper
        .img-wrapper
          margin 0 0 0 33.33334%
          .subimg-wrapper
            margin -10% 0 0 -10%
        .desc-wrapper
          left 22%
  .screen-3
    .left-part
      height 100%
      absolute left top