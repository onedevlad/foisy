.header
  padding 0
  position relative
  background black
  .header-background
    width 100%
    height 100%
    absolute left top
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    transition all 0.4s ease
    opacity 0
    &.active
      opacity 1
    &.header-background-0
      background-image url(../images/header-texture.png)
    &.header-background-1
      background-image url(../images/header-poster.png)
    &.header-background-2
      background-image url(../images/header-city.png)
    &.header-background-3
      background-image url(../images/header-buttons.png)
    &.header-background-4
      background-image url(../images/header-wave.png)
    &.header-background-5
      background-image url(../images/header-book.png)
    &.header-background-6
      background-image url(../images/header-fashion.png)
    &.header-background-7
      background-image url(../images/header-downtown.png)
  .nav-open-button
    width 24px
    height 24px
    absolute top 30px right 5%
    z-index 9
    cursor pointer
    transition transform 0.2s ease
    span
      display block
      width 100%
      height 2px
      background white
      transition transform 0.2s ease
      &.line-0
        transform-origin 0 0
      &.line-1
        margin 9px 0
      &.line-2
        transform-origin 0 100%
    &:hover .line-0
      transform rotateZ(90deg) translate(0, -12px)
    &:hover .line-2
      transform rotateZ(-90deg) translate(0, 12px)
    &.nav-open-button-active
      transform rotateZ(180deg)
      .line-0
      .line-2
        display none
  .header-slider-controls
    absolute top 30px left 5%
    z-index 8
    display block
    color grey-1
    font-family SourceSansProBlack
    font-weight bold
    .header-slider-control-box
      cursor pointer
      display block
      margin-bottom 0.5em
      width 0.5em
      height 0.5em
      background dark-grey
      &.active
        background blue
    .header-page-num
      margin-top 100%
      transform-origin 0% 50%
      transform rotateZ(-90deg)
      display block
      .middle-dots
        letter-spacing 0.25em
        margin 0 0.5em
      .header-current-slide
        color white
  .header-simple-nav
    padding 20vh 0 0 0
    z-index 2
    .simple-nav-item-wrapper
      position relative
      .simple-nav-active-bar
        width 6px
        height 100%
        background blue
        display none
        absolute left top
      .simple-nav-item
        margin-left 10%
        color grey-1
        .item-subtitle
          text-transform uppercase
          font-weight bold
        .item-title
          margin-top 24px
          margin-bottom 12px
          text-transform uppercase
      &.active
        .simple-nav-active-bar
          display block
        .item-title
        .item-desc
          color dark-white
    .item-line
      height 1px
      width 60%
      background grey-3
      margin 48px 10%
    .more
      color grey-1
      font-weight bold
      font-family SourceSansProBlack
      text-transform uppercase
      display inline-block
      text-decoration none
      margin 48px 0 96px 10%
      &:hover
        color grey
  .header-main
    padding 30px 0 0 0
    color white
    z-index 6
    border-left 1px solid rgba(grey, 0.2)
    &.reduced-logo-margin
      .logo-wrapper
        margin-bottom 100px
    .logo-wrapper
      width 8%
      margin-left 20%
      display block
      cursor pointer
      margin-bottom 200px
      .logo
        width 100%
    .studio-name-wrapper
      .studio-name
        color dark-grey
        letter-spacing 1em
        text-transform uppercase
    .title
      text-transform uppercase
      font-weight bold
      font-family SourceSansProBlack
      margin-bottom 48px
      white-space nowrap
    .subtitle-wrapper
      margin-bottom 48px
      color dark-grey
      line-height 2em
    .work-samples-wrapper
      margin-bottom 48px
      .work-samples
        width 100%
        text-transform uppercase
    .scroll-down-wrapper
      margin-bottom 96px
      .scroll-down
        cursor pointer
        text-transform uppercase
        color dark-grey
        letter-spacing 0.25em
    .left-link-wrapper
      margin 144px 0 200px 0
      .left-link
        cursor pointer
        text-decoration none
        font-weight bold
        font-family SourceSansProBlack
        text-transform uppercase
        color dark-grey
        letter-spacing 0.25em
        &:hover
          color white
    .row-inner-wrapper
      padding 0
    .right-line
      background rgba(grey, 0.2)
      width 1px
      height 100%
    .right-line
      absolute left 58.33333333336% top 0

@media(max-width $screen-md) // Tablet
  .header
    padding 5%
    .header-main
      border none
      .studio-name-wrapper
      .title-wrapper
        text-align center
      .left-line
      .right-line
        display none

@media(min-width $screen-md) // Desktop
  .header
    .header-main
      &.padding-bottom
        padding 30px 0 300px 0
      .studio-name-wrapper.move-left
        margin-left -15%