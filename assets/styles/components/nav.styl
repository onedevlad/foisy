.nav
  background black
  height 100%
  fixed top
  z-index 8
  transition right animationSpeed ease
  &-opened
    right 0 !important
  .nav-close-button
    absolute top 0.5em left 0.5em
    cursor pointer
    width 1.5em
    height 1.5em
    background-image url(../images/close.png)
    background-size 100% 100%
  .nav-wrapper
    margin-top 15vh
    list-style none
    font-weight bold
    text-transform uppercase
    .nav-link
      opacity 0
      relative left 50%
      a
        color white
        line-height 4em
        cursor pointer
        text-decoration none
        text-transform uppercase
        font-weight bold
        font-family MontserratBold
        &:hover
          color blue

@media(max-width $screen-md) // Tablet
  .nav
    width 60%
    right -@width

@media(min-width $screen-md) // Desktop
  .nav
    width 25%
    right -@width
