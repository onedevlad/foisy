.lightbox-wrapper
  position relative
  a
    .img-overlay
      z-index 2
      absolute left top
      width 100%
      height 100%
      opacity 0
      transition all animationSpeed ease
      background rgba(grey, 0.75)
      cursor pointer
      &:hover
        opacity 1
      .plus-sign
        width 10% !important
        height auto !important
        absolute top 50% left 50%
        transform translate(-50%, -50%)