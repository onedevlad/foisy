.preloader
  width 100vw
  height 100vh
  background white
  fixed left top
  z-index 1000
  &.loaded
    display none
  .preloader-circle
    absolute top 50% left 50%
    width 50px
    height 50px
    margin -25px 0 0 -25px
    &:before,
    &:after
      content ""
      width 50px
      height 50px
      background blue
      absolute left top
      display inline-block
      border-radius 50%
      animation preloader 1.7s linear infinite
    &:after
      animation-delay -0.9s

@keyframes preloader {
  from {
    transform scale(0, 0)
    opacity 0.5
  }
  to {
    transform scale(1, 1)
    opacity 0
  }
}
