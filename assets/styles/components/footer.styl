.footer
  .footer-wrapper
    background black
    height 40vh
    .left-part
      border-right 1px solid light-black
      padding 0
      height 100%
      position relative
      .contacts-wrapper
        .logo-wrapper
          margin-top 10vh
          padding 0
          .logo
            width 100%
        .social-wrapper
          padding 0
          margin-top 2em
          .social-icon
            padding 0
            &.icon-wrapper-0
              text-align left
            &.icon-wrapper-1
              text-align center
            &.icon-wrapper-2
              text-align right
            .icon
              cursor pointer
              color white
              font-size 14px
              border 1px solid light-black
              border-radius 50%
              padding 0.5em
              &.ti-instagram:hover
                background #6fa8d4
                border-color #6fa8d4
              &.ti-twitter:hover
                background #31c7f2
                border-color #31c7f2
              &.ti-dribbble:hover
                background #e679f6
                border-color #e679f6
    .right-part
      padding 0
      position relative
      height 100%
      font-size 0.75em
      .nav-wrapper
        padding 0
        &>ul
          padding 0
          margin 0
          list-style none
          &>li
            float left
            &:first-child
              padding-left 0
            a
            span
              font-size 14px
              font-family MontserratBold
              color white
              cursor pointer
              text-transform uppercase
              text-decoration none
              font-weight bold
              &:hover
                color blue
            .dropdown-menu
              background light-black
              li
                padding 0
                cursor pointer
                a
                  background transparent
      .search-box-wrapper
        height 8vh
        background black
        z-index 2
        padding 0
        color white
        .search-box
          font-size 12px
          width 70%
          height 100%
          background url(../images/icons/email-pointer.png) no-repeat scroll 5px 50%
          padding 0 30px
          border 1px solid light-black
          outline none
        .go
          width 20%
          absolute right 20%
          margin-top 1vh
          height 6vh
          text-transform uppercase
          a
            padding 0
            line-height 6vh
            height 100%
      .copyright-wrapper
        padding-left 0.75em
        padding-bottom 0.5em
        absolute bottom
        text-transform uppercase
        color light-black
      .line
        width 1px
        height 100%
        absolute left 58.3333334% top
        background light-black

@media(max-width $screen-md) // Tablet
  .footer
    .left-part
      .contacts-wrapper
        .logo-wrapper
          text-align center
    .right-part
      .line
        display none
      .nav-wrapper
        margin-top 10vh
        ul
          li
            padding 0.5em
    .search-box-wrapper
      margin-top 2vh

@media(min-width $screen-md) // Desktop
  .footer
    .right-part
      .nav-wrapper
        margin-top 15vh
        ul
          li
            padding 0 2em
    .search-box-wrapper
      margin-top 13vh
