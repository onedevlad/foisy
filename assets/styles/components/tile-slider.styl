.tile-slide-wrapper
  padding 0 15px 0 0
  height auto !important
  .tile-slide
    position relative
    .img-wrapper
      img
        width 100%
    .desc-wrapper
      absolute top
      width 100%
      height 100%
      padding-left 15px
      background rgba(black, 0.5)
      .desc
        absolute bottom
        padding 0
        .cat-wrapper
          .cat
            text-transform uppercase
            font-weight bold
            font-family SourceSansProBlack
            color grey-1
        .title-wrapper
          .title
            font-family SourceSansProBlack
            font-size 1.25em
            font-weight bold
            text-transform uppercase
            color grey
        .social-wrapper
          padding 0
          margin 1.5em 0 1em 0
          color grey
          .icon-wrapper
            padding 0
            .icon
              font-size 12px
              padding 0.5em
              border 1px solid grey
              border-radius 50%
              text-align center
              cursor pointer
              &.ti-heart:hover
                background #fc8dad
                border-color #fc8dad
              &.ti-new-window:hover
                background blue
                border-color blue
          .date-wrapper
            line-height 12px
            font-size 12px
            cursor pointer
            position relative
            .date
              margin-left 1em