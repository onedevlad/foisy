@require 'common'

@require 'components/slider'
@require 'components/reply'
@require 'components/tile-cross-img'

.main-shop
  z-index 6
  position relative
  padding 0
  .screen-1
    position relative
    .left-part
      margin-top - block-top-offset
      padding-top block-top-offset + 144px
      .screen-num
        top "calc(%s + %s)" % (screen-margin block-top-offset)
      .preview-wrapper
        z-index 2
        .img-preview
          display block
          margin-bottom 24px
          width 100%
          cursor pointer
      .grey-block
        absolute top 30% left
        background grey
        width 130%
        height 70%
    .right-part
      position relative
      .right-line
        width 1px
        height 100%
        absolute top left 58.33333336%
        background dark-grey
      .main-preview
        padding 0
        .slider-wrapper
          position relative
          height 30vw // Sorry.
          z-index 2
          .slider
            background white
            .goods-img
              width 100%
              height 100%
        .desc-wrapper
          margin-top 48px
          .goods-title
            text-transform uppercase
          .goods-price
            display inline-block
            margin-top 12px
      .more-wrapper
        margin 48px 0 0 0
        .more
          cursor pointer
          font-weight bold
          font-family SourceSansProBlack
          text-transform uppercase
          color dark-grey
          box-shadow 0 12px 48px rgba(black, 0.3)
      .desc-wrapper
        margin 96px 0 0 0
        .desc-inner-wrapper
          padding 0
          .desc
            color light-black
          .horizontal-line
            width 100%
            margin 96px 0
            display block
            height 1px
            background dark-grey
      .replies-wrapper
        .title-wrapper
          position relative
          z-index 3
          .like-icon
            z-index 2
            absolute top left
            margin-left -0.75em
            color dark-grey
            opacity 0.3
            font-size 8em
          .title
          .subtitle
            position relative
            z-index 3
          .title
            padding-top 1em
            text-transform uppercase
          .subtitle
            display inline-block
            margin 12px 0
        .slider-wrapper-2
          padding 0
          margin 48px 0
          .slider-inner-wrapper
            padding 0
        .next-arrow
          absolute left 50% top
          height 100%
          background-image url('../../images/icons/arrow-right.png')
          background-repeat no-repeat
          background-position 50% 50%
          cursor pointer
  .screen-2
    position relative
    .lower-part
      absolute left top
      width 100%
      height 100%
      .right-part
        height 100%
        padding 0
        .line-wrapper
          height 100%
          padding 0
          border-left 1px solid dark-grey
    .upper-part
      z-index 2
      .title-wrapper
        .title-inner-wrapper
          padding 0
          margin 96px 0 48px 0
          .title
            text-transform uppercase
      .products-wrapper
        .products-inner-wrapper
          padding 0
          .product
            .img-wrapper
              box-shadow 0 24px 48px rgba(black, 0.3)
              .img
                width 100%
            .subtitle
              font-family SourceSansProBlack
              text-transform uppercase
              margin-top 48px
      .more-wrapper
        padding 0
        margin-top 48px
        margin-bottom 96px

@media(max-width $screen-md) // Tablet
  .main-shop
    .screen-1
      .left-part
        padding 0 5%
        text-align center
        background grey
        .grey-block
          display none
      .right-part
        padding-top 0
        text-align center
        .right-line
          display none
        .main-preview
          .grey-block
          .slider-wrapper
            display none
        .slider-wrapper-2
          .next-arrow
            display none
          .comment
            text-align left
    .screen-2
      .lower-part
        display none
      .upper-part
        padding 0 5%
        .product
          margin-bottom 96px

@media(min-width $screen-md) // Desktop
  .main-shop
    .screen-1
      .left-part
        background white
        // padding 312px 0 screen-sub-margin 0
      .right-part
        padding 144px 0 0 0
        border-left 1px solid dark-grey
    .screen-2
      .right-part
        border-left 1px solid dark-grey
