@import 'common'

@import 'components/nav'
@import 'components/header'
@import 'components/next-step'
@import 'components/shop-goods'
@import 'components/input-range'
@import 'components/footer'

.main
  z-index 6
  position relative
  padding 0
  .screen-1
    position relative
    .left-part
      .screen-num
        top "calc(%s + %s)" % (screen-margin block-top-offset)
      .cat-wrapper
        margin-top 48px
        .title
          font-family SourceSansProBlack
          font-weight bold
          text-transform uppercase
          margin-bottom 12px
          display block
          font-size 16px
        .cat
          font-size 14px
          padding 0.5em 0
          cursor pointer
          display block
          text-transform uppercase
    .right-part
      position relative
      .right-line
        width 1px
        height 100%
        absolute top left 58.33333336%
        background dark-grey
      .goods-wrapper
        padding 0
        .slider
          .slide
            outline none
            background white
            height auto
      .slider-controls-wrapper
        span
          display inline-block
          font-family SourceSansProBlack
          margin-right 1em
          color dark-grey
          cursor pointer
          &.active
            color light-black
  .screen-2
    position relative
    .lower-part
      absolute left top
      width 100%
      height 100%
      .right-part
        height 100%
        padding 0
        .line-wrapper
          height 100%
          padding 0
          border-left 1px solid dark-grey
    .upper-part
      z-index 2
      .title-wrapper
        .title-inner-wrapper
          padding 0
          margin 96px 0 48px 0
          .title
            text-transform uppercase
      .products-wrapper
        .products-inner-wrapper
          padding 0
          .product
            .img-wrapper
              box-shadow 0 24px 48px rgba(black, 0.3)
              .img
                width 100%
            .subtitle
              font-family SourceSansProBlack
              text-transform uppercase
              margin-top 48px
      .more-wrapper
        padding 0
        margin-top 48px
        margin-bottom 96px

@media(max-width $screen-md) // Tablet
  .screen-1
    .left-part
      padding 0 5%
      text-align center
      background grey
      .grey-block
        display none
    .right-part
      padding-top 0
      text-align center
      .right-line
        display none
      .main-preview
        .grey-block
        .slider-wrapper
          display none
      .slider-wrapper-2
        .next-arrow
          display none
        .comment
          text-align left
  .screen-2
    .lower-part
      display none
    .upper-part
      padding 0 5%
      .product
        margin-bottom 96px

@media(min-width $screen-md) // Desktop
  .screen-1
    .left-part
      margin-top - block-top-offset
      padding-top block-top-offset + 144px
      background white
      // padding 312px 0 screen-sub-margin 0
      .categories-cat
        margin-top 96px
    .right-part
      padding 144px 0 0 0
      border-left 1px solid dark-grey
      .goods-wrapper
        margin-top 96px
  .screen-2
    .right-part
      border-left 1px solid dark-grey
