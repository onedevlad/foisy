include ../assets/templates/configs/magazine

doctype traditional
html(lang="en")
  head
    meta(charset="UTF-8")
    title Magazine - Foisy
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/styles/dist/magazine.css')
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/lib/slick/slick.css')
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/lib/slick/slick-theme.css')
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/lib/themify-icons/styles.css')
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/jquery/jquery.js')
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/scripts/dist/magazine.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/slick/slick.min.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/gsap/TweenLite.min.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/gsap/CSSPlugin.min.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/bootstrap/js/dropdown.js', defer)
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  body
    +preloader()
    +header(headerConfig)
    .main.container-fluid
      .screen-1
        .row
          .col-md-4.left-part
            .screen-num
              .dash
              span 01
            .row.posts-wrapper
              .col-md-8.pull-right.post-wrapper
                h4.title Latest posts
                img.post-img(alt='post 1', src=mediaUrlPrefix + 'assets/images/post-1.jpg')
                .post-nav
                  .post-nav-item
                    span.item-cat Design
                    span.item-title Summer mood
                    span.item-date 20 August 2016
                  .post-nav-line
                  .post-nav-item
                    span.item-cat Cars
                    span.item-title All about cars
                    span.item-date 20 August 2016
                  .post-nav-line
                  .post-nav-item
                    span.item-cat Lifestyle
                    span.item-title Making right choises
                    span.item-date 20 August 2016
                  .post-nav-line
            .row.picks-wrapper
              .col-md-8.pull-right.picks-inner-wrapper
                .video-wrapper
                  img.video-preview(alt='Drone', src=mediaUrlPrefix + 'assets/images/drone.jpg')
                  .overlay
                    span.play-btn-wrapper
                      span.play-btn.ti-control-play
                    br
                    span.video-desc Drone experience
                h4.title Editors' picks
                .row.pick-wrapper
                  .col-xs-2.editor-avatar-wrapper
                    img.editor-avatar(alt='John Doe', src=mediaUrlPrefix + 'assets/images/icons/avatar-1.png')
                  .col-xs-10.desc-wrapper
                    span.pick-title How to design an app
                    span.editor-name John Doe
                .row.pick-wrapper
                  .col-xs-2.editor-avatar-wrapper
                    img.editor-avatar(alt='Ricky Martinez', src=mediaUrlPrefix + 'assets/images/icons/avatar-2.png')
                  .col-xs-10.desc-wrapper
                    span.pick-title Let's pray for Earth
                    span.editor-name Ricky Martinez
                .row.pick-wrapper
                  .col-xs-2.editor-avatar-wrapper
                    img.editor-avatar(alt='Sean Dolla', src=mediaUrlPrefix + 'assets/images/icons/avatar-3.png')
                  .col-xs-10.desc-wrapper
                    span.pick-title Best of the best
                    span.editor-name Sean Dolla
                .row.pick-wrapper
                  .col-xs-2.editor-avatar-wrapper
                    img.editor-avatar(alt='Samantha West', src=mediaUrlPrefix + 'assets/images/icons/avatar-4.png')
                  .col-xs-10.desc-wrapper
                    span.pick-title No fear, no fear!
                    span.editor-name Samantha West
            .row
              .col-md-8.col-md-offset-4.categories-wrapper
                h4.title Categories
                .cat
                  span.ti-medall
                  span.cat-name Design
                .cat
                  span.ti-medall
                  span.cat-name Life
                .cat
                  span.ti-medall
                  span.cat-name Sports
                .cat
                  span.ti-medall
                  span.cat-name Luxury
          .col-md-8.right-part
            .right-line
            .row
              h2.title Stories
              span.subtitle Featured piece of content
              .row
                .col-md-8.big-slide-wrapper
                  +slide(mediaUrlPrefix + 'assets/images/japan.jpg', 'Japanese culture',
                    'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                    '3 September 2016', 'Lifestyle', true)
              .row
                .col-md-8.big-slide-wrapper
                  +slide(mediaUrlPrefix + 'assets/images/fitness.jpg', 'The power of fitness',
                    'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                    '3 September 2016', 'Lifestyle', true)
                .col-md-8.big-slide-wrapper
                  +slide(mediaUrlPrefix + 'assets/images/smart-watch.jpg', 'Smart-watch apps',
                    'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                    '3 September 2016', 'Technology', true)
              .row
                button.keep-reading
                  a(href='blog') Keep reading
      .screen-2
        .row
          .col-md-4.left-part
            .screen-num
              .dash
              span 02
            .row.title-wrapper
              span.stats-icon.ti-stats-up
              h3.title Trending
              span.subtitle Content that caught our attention
          .col-md-8.col-md-offset-4.right-part
            .line
            .row.tile-slider-wrapper
              .row.slick-slider
                +tile-slide(mediaUrlPrefix + 'assets/images/yee-zy-360x.jpg', 'Yee-zy 360x',
                  '3 September 2016', 'Fashion', false)
                +tile-slide(mediaUrlPrefix + 'assets/images/experiment.jpg', 'National experiment',
                  '3 September 2016', 'Earth', false)
                +tile-slide(mediaUrlPrefix + 'assets/images/car.jpg', 'Majestic cars',
