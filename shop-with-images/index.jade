                  span.title Categories
                  span.cat Shop men
                  span.cat Shop women
                  span.cat Shop kids
                .cat-wrapper
                  span.title Tags
                  span.cat Jeans
                  span.cat Design
                  span.cat Art
                  span.cat T-shirts
                .cat-wrapper
                  span.title Price range
                  input.range(type='range', min='0', max='3000', step='10')
                  span.cat.output $95 - $200
          .col-md-8.right-part
            .right-line
            .row
              .col-md-8.goods-wrapper
                .row.slider.shop-lazy-slider
                  .slide
                    +tile-cross-img('screen-1', 'Jeans',   '$ 2500.00', 'assets/images/jeans.png', true)
