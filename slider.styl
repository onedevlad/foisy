@import 'styles/vars'

.slide-wrapper
  .slide
    position relative
    &>img
      width 100%
    .desc-wrapper
      box-sizing content-box
      border 1px solid dark-grey
      width 90%
      margin-top -50%
      position relative
      z-index 2
      background white
      .heading-wrapper
        padding 0
        .heading
          width 100%
          display inline-block
          text-overflow ellipsis
          font-size 1.5em
          font-weight bold
          text-transform uppercase
      .desc-text-wrapper
        padding 0
        margin-top 5%
        overflow hidden
      .social-wrapper
        height 30px
        padding 0
        margin-top 2em
        .icon-wrapper
          height 100%
          padding 0
          img
            height 100%
            cursor pointer
        .date-wrapper
          height 100%
          padding 0
          cursor pointer
          position relative
          img
            absolute top 25%
            height 50%
            display inline-block
          span
            absolute top 25% left 15%

@media(max-width $screen-md) // Tablet
  .slide-wrapper
    overflow hidden
    padding 0
    height auto
    .slide
      .desc-wrapper
        padding-bottom 0
        .desc-text-wrapper
          margin-top 2%

@media(min-width $screen-md) // Desktop
  .slide-wrapper
    .slide
      .desc-wrapper
        padding 1em
      .desc-text-wrapper
        margin-top 5%