@import 'vars'

@import 'components/nav'
@import 'components/header'
@import 'components/slider'
@import 'components/footer'

.header
  background-image url(../images/header-city.png)
.main
  .screen-1
    position relative
    .lower-part
      absolute left top
      height 100%
      width 100%
      .left-part
      .right-part
        height 100%
        padding 0
      .left-part
        background white
        margin-top -4vh
      .right-part
        height 100%
        border-left 1px solid dark-grey
        .blank-space
          padding 0
          height 100%
          border-right 1px solid dark-grey
    .upper-part
      z-index 3
      position relative
      .person-wrapper
        padding 0
        .person-inner-wrapper
          padding 0
          height 3em
          position relative
          .person-photo
            height 100%
          .person-data
            absolute bottom left 4em
            display inline-block
            .person-name
              font-weight bold
              text-transform uppercase
            .person-position
              color dark-grey
      .post-wrapper
        padding 0
        .title-wrapper
          padding 0
          margin 12vh 0 0 0
          .title
            font-family SourceSansProBlack
            font-weight bold
            font-size 2.5em
            text-transform uppercase
          .subtitle
            width 95%
            text-align justify
            display block
            margin-top 2vh
            margin-bottom 4vh
        .date-wrapper
          padding 0
          img
            width 1em
            height 1em
          .date
            margin-left 1em
        .post-img-wrapper
          padding 0
          img
            width 100%
      .post-text-wrapper
        .quote-wrapper
          padding 0
          .quote-inner-wrapper
            margin 10vh 2em 0 0
            float right
            .quote
              font-style italic
        .post-text-inner-wrapper
          padding 0
          .post-text
            padding 0
            &>span
              padding 8vh 0 0 0
              text-align justify
              display block
              width 95%
            .subtitle
              font-weight bold
              font-size 1.5em
              font-family SourceSansProBlack
              text-transform uppercase
            .share-wrapper
              margin-top 8vh
              cursor pointer
              .share
                font-family SourceSansProBlack
                text-transform uppercase
                font-weight bold
              .share-icon
                margin-left 1em
  .screen-2
    position relative
    .lower-part
      absolute left top
      height 100%
      width 100%
      .left-part
      .right-part
        height 100%
        padding 0
      .right-part
        border-left 1px solid dark-grey
        .blank-space
          padding 0
          height 100%
          border-right 1px solid dark-grey
    .upper-part
      .title-wrapper
        padding 0
        .title
          font-family SourceSansProBlack
          font-weight bold
          text-transform uppercase
          font-size 3em
      .slider
        margin-top 12vh
      .more-wrapper
        margin 12vh 0 8vh 0
        .more
          padding 0.5em 1em
          color white
          box-shadow 0 20px 20px dark-grey

@media(max-width $screen-md) // Tablet
  .screen-1
    padding 5%
    .lower-part
      .left-part
        display none
    .upper-part
      .person-wrapper
        margin-top 0
      .date-wrapper
        margin-top 8vh
      .quote-wrapper
        display none
  .screen-2
    padding 20vh 5% 5% 5%
    .lower-part
      display none
    .upper-part
      .slider
        height auto
        .slide-wrapper
          margin-top 10vh
      .more-wrapper
        padding 5%

@media(min-width $screen-md) // Desktop
  .screen-1
    .upper-part
      .person-wrapper
        margin-top 16vh
      .date-wrapper
        margin-top 16vh
  .screen-2
    padding 20vh 0 0 0
    .slider
      height 60vh
    .more-wrapper
      padding 0