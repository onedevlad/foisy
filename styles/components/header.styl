.header
  padding 0
  position relative
  background black
  .header-background
    width 100%
    height 100%
    absolute left top
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    transition all 0.2s ease
    &.header-background-1
      z-index 5
      background-image url(../images/header-texture.png)
    &.header-background-2
      z-index 4
      background-image url(../images/header-poster.png)
    &.header-background-3
      z-index 3
      background-image url(../images/header-city.png)
    &.header-background-4
      z-index 2
      background-image url(../images/header-buttons.png)
    &.header-background-5
      z-index 1
      background-image url(../images/header-wave.png)
  .nav-open-button
    width 1.5em
    height 1.5em
    background url(../images/hamburger.png)
    background-size cover
    absolute top 2vh right 5%
    cursor pointer
    z-index 6
  .header-slider-controls
    absolute top 2vh left 5%
    z-index 6
    .header-slider-control-box
      cursor pointer
      display block
      margin-bottom 0.5em
      width 0.5em
      height 0.5em
      background dark-grey
      &.active
        background blue
    .header-page-num
      display block
      margin-top 1em
      transform-origin 40% 100%
      transform rotateZ(-90deg)
      .header-current-slide
        color white
  .header-main
    padding 0
    padding-top 2vh
    color white
    z-index 6
    .logo
      width 100%
      height 3em
      background-image url(../images/logo.png)
      background-size 100%
      background-repeat no-repeat
      background-position 50% 50%
    .studio-name-wrapper
      margin-top 20vh
      .studio-name
        color dark-grey
        letter-spacing 1em
        text-transform uppercase
    .title
      text-transform uppercase
      font-size 4em
      font-weight bold
      font-family SourceSansProBlack
    .subtitle-wrapper
      margin-top 8vh
      color dark-grey
      line-height 2em
    .work-samples-wrapper
      margin-top 8vh
      margin-bottom 8vh
      .work-samples
        width 100%
        text-transform uppercase
    .scroll-down-wrapper
      margin-bottom 8vh
      .scroll-down
        text-transform uppercase
        color dark-grey
        letter-spacing 0.25em
    .row-inner-wrapper
      padding 0
    .left-line
    .right-line
      background rgba(grey, 0.2)
      width 1px
      height 100%
    .left-line
      absolute left 25% top 0
    .right-line
      absolute left 83.33333334% top 0

@media(max-width $screen-sm) // Mobile
  .header
    padding 5%
    .studio-name-wrapper
    .title-wrapper
      text-align center
    .left-line
    .right-line
      display none
