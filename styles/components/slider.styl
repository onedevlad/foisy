.slide-wrapper
  .slide
    position relative
    .img-wrapper
      position relative
      width 100%
      img
        width 100%
    .desc-wrapper
      border 1px solid dark-grey
      width 90%
      margin-top -15%
      position relative
      z-index 2
      background white
      .heading-wrapper
        padding 0
        .heading
          width 100%
          display inline-block
          text-overflow ellipsis
          font-size 1.5em
          font-weight bold
          font-family SourceSansProBlack
          text-transform uppercase
      .desc-text-wrapper
        padding 0
        margin-top 5%
        overflow hidden
      .social-wrapper
        height 30px
        padding 0
        margin-top 2em
        .icon-wrapper
          height 100%
          padding 0
          .icon
            width 2em
            height 2em
            cursor pointer
            background-size 100% 100%
          .like-icon
            background-image url(../images/like.png)
          .share-icon
            background-image url(../images/share.png)
        .date-wrapper
          height 100%
          padding 0
          cursor pointer
          position relative
          display table
          .date-icon
            display inline-block
            background-image url(../images/date.png)
            background-size 100% 100%
            width 1.2em
            height 1.2em
            margin-top 0.4em
          span
            display table-cell
            vertical-align middle
            margin-left 1em

@media(max-width $screen-md) // Tablet
  .slide-wrapper
    overflow hidden
    padding 0
    height auto
    .slide
      .desc-wrapper
        padding-bottom 0
        .desc-text-wrapper
          margin-top 2%

@media(min-width $screen-md) // Desktop
  .slide-wrapper
    .slide
      .desc-wrapper
        padding 1em
      .desc-text-wrapper
        margin-top 5%
