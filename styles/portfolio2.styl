@import 'vars'

@import 'components/nav'
@import 'components/header'
@import 'components/footer'
@import 'components/next-step'

.header
  background-image url(../images/header-wave.png)
.main
  .screen-1
    position relative
    .lower-part
      absolute left top
      height 100%
      width 100%
      .featured-wrapper
        absolute left 2% top 27%
        .featured
          color grey
          font-size 12em
          font-weight bold
          font-family SourceSansProBlack
          text-transform uppercase
      .grey-space-small
        background grey
        width 25%
        height 20%
        absolute top 60% left 10%
      .left-part
      .right-part
        padding 0
      .right-part
        height 100%
        border-left 1px solid dark-grey
        .row
          height 100%
          .blank-space
            z-index 2
            padding 0
            height 100%
            box-sizing content-box
            border-right 1px solid dark-grey
          .filters-wrapper
            z-index 4
            padding 0
            margin-top 24vh
            a
              color dark-grey
              text-transform uppercase
          .grey-space
            width 50%
            height 40%
            absolute right 10% top 4vh
            background grey
    .upper-part
      z-index 3
      position relative
      .row
        height auto
        position relative
        .related-wrapper
          padding 0
          .title
            font-weight bold
            font-family SourceSansProBlack
            font-size 2em
            text-transform uppercase
          .subtitle
            display block
            margin-top 4vh
      .images-wrapper
        .img-wrapper
          padding 0
          a
          img
            width 100%
          a
            .img-desc
              absolute bottom 10% right 5%
              font-weight bold
              color white
              font-family SourceSansProBlack
              text-transform uppercase
              font-size 1.5em
              text-shadow 1px 1px 1px black
      .more-wrapper
        padding 0
        margin-top 10vh
        .more
          color white
          padding 0.5em 1em
          box-shadow 0 20px 20px dark-grey


@media(max-width $screen-md) // Tablet
  .screen-1
    padding 5%
    .lower-part
      display none
    .upper-part
      .related-wrapper
        margin-top 10vh
      .images-wrapper
        margin-top 0
        .img-wrapper
          margin-top 10vh
          padding 0

@media(min-width $screen-md) // Desktop
  .screen-1
    .upper-part
      .related-wrapper
        margin-top 20vh
      .images-wrapper
        margin-top 15vh
