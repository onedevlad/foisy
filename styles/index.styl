@import 'vars'

@import 'components/nav'
@import 'components/header'
@import 'components/slider'
@import 'components/footer'
@import 'components/next-step'

.main
  z-index 6
  position relative
  padding 0
  .screen-1
    .left-part
      padding 0
      margin-top -4vh
      .blank-box
        height 40vh
        background white
      .quote-box
        background grey
        height 64vh
        padding-top 25vh
        .quote
          font-style italic
    .right-part
      position relative
      padding-left 0
      padding-right 0
      .lower-part
        .article-wrapper
          border-right 1px solid dark-grey
          padding-left 0
          padding-right 0
          .article-inner-wrapper
            .heading
              font-size 4em
              font-weight bold
              text-transform uppercase
              font-family SourceSansProBlack
            .article
              margin-top 4vh
      .upper-part
        .images-wrapper
          position relative
          .img-wrapper
            &.desk-wrapper
              z-index 1
              .img-overlay
                z-index 2
            &.building-wrapper
              z-index 3
              .img-overlay
                z-index 4
            &.sand-wrapper
              z-index 2
              .img-overlay
                z-index 3
            a
            img
              position relative
              display block
              width 100%
          .keep-reading
            width 25%
            color white
            z-index 4
            box-shadow 0 20px 20px dark-grey
  .screen-2
    color white
    .left-part
      padding 0
      background black
      position relative
      .title-wrapper
        width 100%
        z-index 2
        .title
          text-transform uppercase
          font-weight bold
          font-size 5em
          font-family SourceSansProBlack
    .right-part
      background black
      .team-inner-wrapper
        position relative
        padding 0
        z-index 2
        .team-img-wrapper
          position relative
          a
          img
            display block
            position relative
            width 100%
            z-index 2
          .img-overlay
            z-index 3
            width 100%
            height 100%
      .line
        width 1px
        height 100%
        absolute left 58.333333334%
        background light-black
      .learn-more
        z-index 3
  .screen-3
    position relative
    .lower-part
      .left-part
        padding 0
        margin-top -4vh
        height 100%
        background white
        position relative
      .right-part
        padding 0
        position relative
        .title-wrapper
          padding 0
          margin-top screen-margin
          margin-bottom 48px
          .title
            font-size 2em
            font-weight bold
            font-family SourceSansProBlack
            text-transform uppercase
        .blank-space
          height 100%
          background grey
        .line
          width 1px
          height 100%
          absolute left 58.3333334% top
          background dark-grey
        .view-blog
          color dark-grey
          text-transform uppercase
          font-weight bold
          font-family SourceSansProBlack
          text-decoration none
          &:hover
            color light-black
    .upper-part
      z-index 2
      width 100%
      .slider
        padding 0
      .slider-controls-wrapper
        margin-top 24px
        padding 0
        .slider-controls
          padding 0
          .slider-control-box
            cursor pointer
            display inline-block
            margin-right 0.5em
            width 1em
            height 1em
            background dark-grey
            &.active
              background blue
          .page-num
            margin-left 0.5em

@media(max-width $screen-md) // Tablet
  .screen-1
    height auto
    .left-part
      .blank-box
       display none
      .quote-box
        width 100%
        text-align center
    .right-part
      .lower-part
        height auto
        .article-wrapper
          height auto
        .article-inner-wrapper
          padding 5%
          .heading
            text-align center
          .article
            text-align justify
      .upper-part
        width 90%
        margin 0 5%
        position static
        .images-wrapper
          height auto
          width 100%
          .img-wrapper
          .keep-reading
            margin-top 5%
            position static
          .img-wrapper
            width 100%
            height auto
            a
            img
              height auto
            .img-overlay
              display none
          .keep-reading
            margin-left 37.5%
  .screen-2
    background black
    padding 5%
    margin-top 5%
    height auto
    .left-part
      height auto
      margin-top 5%
      .title-wrapper
        position static
        text-align center
    .right-part
      height auto
      .line
        display none
      .learn-more
        position static
        margin 5% auto
      .team-wrapper
        .team-img-wrapper
          width 100%
          height auto
          margin-top 10vh
          a
          img
            height auto
  .screen-3
    height auto
    padding 5%
    .lower-part
      height auto
      .left-part
        display none
      .right-part
        height auto
        .blank-space
          display none
        .title-wrapper
          text-align center
        .line
          display none
        .view-blog
          position static
          display block
          margin 5vh 0
    .upper-part
      height auto
      position static
      .slider
        height auto

@media(min-width $screen-md) // Desktop
  .screen-1
    .left-part
      .quote-box
        width 150%
    .right-part
      border-left 1px solid dark-grey
      padding screen-margin 0 0 0
      .lower-part
        height 100%
        .article-wrapper
          height 100%
      .upper-part
        width 70%
        margin-left 20%
        absolute top screen-margin
        .images-wrapper
          height 90vh
          .img-wrapper
            a
            img
              height 100%
          .desk-wrapper
            width 70%
            height 60%
            absolute right 0
          .building-wrapper
            width 40%
            height 30%
            absolute right 15% top 40%
          .sand-wrapper
            width 75%
            height 30%
            absolute left 0 top 55%
          .keep-reading
            absolute bottom 12% right 20.333334%
  .screen-2
    height 60vh
    .left-part
      height 100%
      border-right 1px solid light-black
      margin-top -4vh
      .title-wrapper
        absolute top 30% left 60%
    .right-part
      height 100%
      .learn-more
        absolute left 58.333333334% top 70%
      .team-wrapper
        .team-img-wrapper
          margin-top 7.5vh
          height 45vh
          width 55%
          a
          img
            height 100%
  .screen-3
    height 100vh
    .lower-part
      height 100%
      .right-part
        border-left 1px solid dark-grey
        height 100%
        .view-blog
          absolute left 58.3333334% top 15%
    .upper-part
      absolute top 35vh
      .slider
        height 100%
