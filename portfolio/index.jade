                  img(alt='Poster 4', src= mediaUrlPrefix + 'images/poster-4.png')
                  .img-overlay
                    img.plus-sign(alt='Show in a popup', src= mediaUrlPrefix + 'images/plus.png')
          .row.images-wrapper.images-row-4
            .img-wrapper.desc-img-wrapper.poster-1
              .img-float-desc
                span.heading Project Title
