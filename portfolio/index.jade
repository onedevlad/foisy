                    img.plus-sign(alt='Show in a popup', src= mediaUrlPrefix + 'images/plus.png')
      .screen-3
        .row.lower-part
          .col-md-4.left-part
          .col-md-8.right-part
            .row
              .col-md-7.blank-space
              .grey-space
        .row.upper-part
          .row
            .col-md-3.col-md-offset-4.related-wrapper
              span.title Related projects
              span.subtitle More of the same
          .row.images-wrapper
            .col-md-4.col-md-offset-2.img-wrapper
              a.img-link(href= mediaUrlPrefix + 'images/related-1.png', data-lightbox='screen-3', data-title='Related 1')
                img(alt='Related 1', src= mediaUrlPrefix + 'images/related-1.png')
                span.img-desc Illustration
                .img-overlay
                  img.plus-sign(alt='Show in a popup', src= mediaUrlPrefix + 'images/plus.png')
            .col-md-4.img-wrapper
              a.img-link(href= mediaUrlPrefix + 'images/related-2.png', data-lightbox='screen-3', data-title='Related 2')
                img(alt='Related 2', src= mediaUrlPrefix + 'images/related-2.png')
                span.img-desc Visual identity
                .img-overlay
                  img.plus-sign(alt='Show in a popup', src= mediaUrlPrefix + 'images/plus.png')
          .row
            .col-md-3.col-md-offset-4.more-wrapper
              button.more
                a(href= mediaUrlPrefix + 'portfolio-with-images') More projects
      include ../templates/footer
    include ../templates/nav
