include ../assets/templates/configs/blog-with-images

doctype traditional
html(lang="en")
  head
    meta(charset="UTF-8")
    title Blog - Foisy
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/styles/dist/all.css')
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/scripts/dist/blog-with-images.js', defer)
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  body
    +preloader()
    +header(headerConfig)
    .main-blog-with-images
      .screen-1
        .row.lower-part
          .col-md-4.left-part
            .screen-num
              .dash
              span 01
          .col-md-8.right-part
            .row
              .col-md-7.blank-space
              .grey-space
          .grey-space-small
        .row.upper-part
          .row
            .col-md-8.col-md-push-4.featured-wrapper
              .row
                .title-wrapper
                  h2.title Featured view
              .row
                .col-md-8.featured-slide
                  +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                    'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                    '2 July 2016')
      .screen-2
        .row.lower-part
          .col-md-4.left-part
          .col-md-8.right-part
            .row
              .col-md-7.blank-space
              .grey-space
          .grey-space-small
        .row.upper-part
          .row
            .col-md-10.col-md-offset-1.slider
              +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/landscape.jpg', 'Art is like a mountain',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/bussiness.jpg', '"Bussiness design"',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
            .col-md-10.col-md-offset-1.slider
              +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/landscape.jpg', 'Art is like a mountain',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/bussiness.jpg', '"Bussiness design"',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
          .row
            .col-md-2.col-md-push-4.more-wrapper
              button.more
                a(href = mediaUrlPrefix + 'blog') Load more
      +nextStep('Next step', 'Drop us a line about any bussiness inquiry or just say "hello".', 'Reach out')
      +footer()
    include ../assets/templates/nav
