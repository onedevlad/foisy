include ../assets/templates/mixins/header
include ../assets/templates/mixins/slide
include ../assets/templates/mixins/next-step

- var mediaUrlPrefix = '../'

doctype traditional
html(lang="en")
  head
    meta(charset="UTF-8")
    title Foisy
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/styles/blog2.css')
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/lib/lightbox/css/lightbox.min.css')
    link(rel='stylesheet', type='text/css', href= mediaUrlPrefix + 'assets/lib/themify-icons/styles.css')
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/jquery/jquery.js')
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/scripts/common.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/gsap/TweenLite.min.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/gsap/CSSPlugin.min.js', defer)
    script(type='text/javascript', src= mediaUrlPrefix + 'assets/lib/lightbox/js/lightbox.min.js', defer)
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no')
  body
    +header('Foisy blog', 'Views', 'We support our vision with a great variety of views.', '', 'Take me there', false, mediaUrlPrefix + 'portfolio', 3)
    .main
      .screen-1
        .row.lower-part
          .col-md-4.left-part
            .screen-num
              .dash
              span 01
          .col-md-8.right-part
            .row
              .col-md-7.blank-space
              .grey-space
          .grey-space-small
        .row.upper-part
          .row
            .col-md-8.col-md-push-4.featured-wrapper
              .row
                .title-wrapper
                  h2.title Featured view
              .row
                .col-md-8.featured-slide
                  +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                    'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                    '2 July 2016')
      .screen-2
        .row.lower-part
          .col-md-4.left-part
          .col-md-8.right-part
            .row
              .col-md-7.blank-space
              .grey-space
          .grey-space-small
        .row.upper-part
          .row
            .col-md-10.col-md-offset-1.slider
              +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/landscape.jpg', 'Art is like a mountain',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/bussiness.jpg', '"Bussiness design"',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
            .col-md-10.col-md-offset-1.slider
              +slide( mediaUrlPrefix + 'assets/images/wave.jpg', 'Deep water',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/landscape.jpg', 'Art is like a mountain',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
              +slide( mediaUrlPrefix + 'assets/images/bussiness.jpg', '"Bussiness design"',
                'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates necessitatibus, assumenda placeat odio iure dolore, deserunt quibusdam beatae magni officia.',
                '2 July 2016')
          .row
            .col-md-2.col-md-push-4.more-wrapper
              button.more
                a(href = mediaUrlPrefix + 'blog') Load more
      +nextStep('Drop us a line about any bussiness inquiry or just say "hello".', 'Reach out')
      include ../assets/templates/footer
    include ../assets/templates/nav
